class SessionsController < ApplicationController
  def new
    @user_class = "form-control"
    @pass_class = "form-control"
  end
  def create
    user = User.find_by(username: params[:username])
    if user
      if user.authenticate(password: params[:password])
        @user_class = "form-control is-valid"
        @pass_class = "form-control is-invalid"
        render :new
      else
        session[:user_id] = user.id
        redirect_to '/'
      end
    else
      @user_class = "form-control is-invalid"
      @pass_class = "form-control is-invalid"
      render :new
    end
  end
end
