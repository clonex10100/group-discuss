<div class="roundbox">
  <h3>Leave a comment</h3>
  <%= display_errors_for(comment) %>
  <%= form_with model: [comment.topic.group, comment.topic, comment] do |f|%>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :topic_id %>
    <div class='form-group'>
    <%= f.text_area :content %>
    </div>
    <%= f.submit 'Submit Comment' %>
  <% end %>
</div>
