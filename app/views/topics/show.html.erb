<div class="roundbox">
    <h1><%= @topic.title %></h1>
    <p><%= @topic.content %></p>
    <p><%= "Score: #{@topic.voteAmount}" %></p>
    <% if @topic.votes.length > 0 %>
    <p>Voters: </p>
    <ul>
      <% @topic.voters.each do |user| %>
        <li><%= user.username %></li>
      <% end %>
    </ul>
    <% end %>
    <footer>
    <%= link_to @topic.group.name, group_path(@topic.group) %>
    <%= link_to @topic.user.username, user_path(@topic.user) %>
    </footer>
</div>
<div class="roundbox">
<% if user_signed_in? %>
  <%= render_vote(@vote) %>
  <h3>Leave A comment</h3> 
  <%= render partial: 'comments/form', locals: {comment: @comment} %>
<% else %>
  <a href="/users/sign_in"><h3>Sign in to leave a comment</h3></a>
<% end %>
</div>
<% @topic.comments.each do |comment| %>
  <%= render partial: 'comments/comment', locals: {comment: comment} unless comment.content.blank? %>
<% end %>
