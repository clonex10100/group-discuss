<% if user_signed_in? %>
  <div class="roundbox text-center">
    <h1>Welcome, <%= current_user.username %></h1>
  </div>
<% end %>
<%= form_with url:'/', method: 'get'  do |f| %>
  <%= f.select(:sort, options_for_select([['Most Votes', 1], ['Least Votes', 2], ['Most Comments', 3], ['Least Comments', 4], ['Newest', 5], ['Oldest', 6]])) %>
  <%= f.submit :sort %>
<% end %>
<%= render partial: 'topics/topics_preview', locals: {topics: @topics} %>
