<%= display_errors_for(vote) %>
<%= form_with model: [vote.topic.group, vote.topic, vote] do |f|%>
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :topic_id %>
  <%= f.hidden_field :value, value: 1 %>
  <%= f.submit :like %>
<% end %>
<%= form_with model: [vote.topic.group, vote.topic, vote] do |f|%>
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :topic_id %>
  <%= f.hidden_field :value, value: -1 %>
  <%= f.submit :dislike %>
<% end %>
